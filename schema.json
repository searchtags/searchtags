{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "title": "Schema for \"Open Search Tags\" definition file",
  "definitions": {
    "alias": {
      "properties": {
        "type": { "enum": [ "alias" ] },
        "reference": {
          "type": "string",
          "pattern": "^[a-z0-9]+$"
        }
      },
      "required": [ "type", "reference" ],
      "additionalProperties": false
    },
    "description": {
      "properties": {
        "type": { "enum": [ "description" ] },
        "name": {
          "type": "string",
          "description": "Name of the specific search provider."
        },
        "searchUrls": {
          "type": "object",
          "description": "A list of URLs which must be assigned to a locale. Use \"en\" (English) as a default. Use \"{{s}}\" as placeholder",
          "patternProperties": {
            "^[a-z]{2}(_[A-Z]{2})?$": {
              "type": "string"
            }
          },
          "additionalProperties": false
        }
      },
      "required": [ "type", "name" ],
      "additionalProperties": false
    }
  },
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "description": "Describe your OpenBang definition file"
    },
    "description": {
      "type": "string",
      "description": "Add an optional description to your OpenBang definition file"
    },
    "items": {
      "type": "object",
      "description": "Configure your available OpenBangs",
      "patternProperties": {
        "^[a-z0-9]{1,20}$": {
          "type": "object",
          "oneOf": [
            { "$ref": "#/definitions/alias" },
            { "$ref": "#/definitions/description" }
          ]
        }
      },
      "additionalProperties": false
    }
  },
  "required": [ "title", "items" ],
  "additionalProperties": false
}
